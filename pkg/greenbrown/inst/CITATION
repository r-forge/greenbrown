    journal      = "Global Change Biology",
    year         = "2015",
	volume       = "21",
	number       = "9",
	pages        = "3414-3435",
	doi          = "10.1111/gcb.12950",
         
    textVersion = 
         paste("Matthias Forkel, Mirco Migliavacca, Kirsten Thonicke, Markus Reichstein, Sibyll Schaphoff, Ulrich Weber and Nuno Carvalhais (2015).", "Co-dominant water control on global inter-annual variability and trends in land surface phenology and greenness.", "Global Change Biology, 21(9), 3414-3435.", ""),
)



